<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pesanan Saya - KURNIA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body { background-color: #f4f6f9; animation: fadeIn 0.6s ease-in-out; }
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
        .sidebar { min-height: calc(100vh - 76px); background-color: #fff; border-right: 1px solid #eee; }
        .sidebar-link { display: flex; align-items: center; padding: 12px 20px; color: var(--primary-color, #2c3e50); text-decoration: none; transition: 0.3s; border-radius: 12px; margin-bottom: 8px; font-weight: 500; }
        .sidebar-link:hover { background-color: var(--bg-light, #f8f9fa); color: var(--accent-color, #c9a227); transform: translateX(5px); }
        .sidebar-link.active { background-color: var(--accent-color, #c9a227); color: #fff; }
        .sidebar-link i { font-size: 1.3rem; margin-right: 14px; width: 24px; text-align: center; }
        .dashboard-card { background: #fff; border-radius: 16px; padding: 25px; box-shadow: 0 2px 15px rgba(0,0,0,0.03); border: 1px solid #f0f0f0; transition: all 0.3s ease; }
        .dashboard-card:hover { transform: translateY(-3px); box-shadow: 0 8px 20px rgba(0,0,0,0.06); }
        .item-thumb { width: 60px; height: 60px; object-fit: cover; border-radius: 8px; border: 1px solid #eee; }
    </style>
</head>

<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-light bg-white py-3 fixed-top shadow-sm">
    <div class="container-fluid px-4">
        <a class="navbar-brand fw-bold fs-4" href="/">KURNIA<span style="color: var(--accent-color);">.</span></a>
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
            <i class="bi bi-list fs-4"></i>
        </button>
        <div class="collapse navbar-collapse" id="mainNav">
            <ul class="navbar-nav ms-auto align-items-center">
                <a href="/keranjang" class="nav-link position-relative me-3">
                    <i class="bi bi-cart-fill fs-5"></i>
                    <% if (typeof cartCount !== 'undefined' && cartCount > 0) { %>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 10px;"><%= cartCount %></span>
                    <% } %>
                </a>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown">
                        <div class="bg-secondary rounded-circle text-white fw-bold d-flex align-items-center justify-content-center" style="width: 35px; height: 35px; font-size: 14px;">
                            <%= user.username.substring(0,2).toUpperCase() %>
                        </div>
                        <span class="d-none d-lg-block small fw-semibold"><%= user.username %></span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 mt-3 rounded-4 p-2">
                        <li><a class="dropdown-item rounded-3 p-2 mb-1" href="/pelanggan/dashboard">Dashboard</a></li>
                        <li><a class="dropdown-item rounded-3 p-2 text-danger" href="/logout">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid px-0" style="margin-top: 76px;">
    <div class="row g-0">

        <div class="col-lg-2 d-none d-lg-block sidebar p-4 shadow-sm">
            <h6 class="text-muted small fw-bold mb-4 ps-3">MENU UTAMA</h6>
            <nav class="nav flex-column gap-2">
                <a href="/pelanggan/dashboard" class="sidebar-link"><i class="bi bi-grid-fill"></i> Dashboard</a>
                <a href="/pelanggan/pesanan" class="sidebar-link active"><i class="bi bi-bag-check-fill"></i> Pesanan Saya</a>
                <a href="/wishlist" class="sidebar-link"><i class="bi bi-heart-fill"></i> Wishlist</a>
                <h6 class="text-muted small fw-bold mt-4 mb-2 ps-3">AKUN</h6>
                <a href="/pelanggan/profil" class="sidebar-link"><i class="bi bi-person-lines-fill"></i> Edit Profil</a>
                <a href="/logout" class="sidebar-link text-danger mt-4"><i class="bi bi-box-arrow-left"></i> Keluar</a>
            </nav>
        </div>

        <div class="col-lg-10 p-4 p-lg-5">
            <h2 class="fw-bold mb-4">Riwayat Pesanan</h2>

            <% if (orders && orders.length > 0) { %>
                <div class="row g-4">
                    <% orders.forEach(order => { %>
                    <div class="col-12">
                        <div class="dashboard-card p-4">
                            <div class="row gy-3 align-items-center">

                                <div class="col-md-3">
                                    <h6 class="fw-bold mb-1 text-primary">#ORD-<%= order.id %></h6>
                                    <small class="text-muted"><%= new Date(order.order_date).toLocaleDateString('id-ID') %></small>
                                </div>

                                <div class="col-md-3">
                                    <span class="text-muted small d-block">Total Belanja</span>
                                    <span class="fw-bold fs-5">Rp <%= Number(order.total_price).toLocaleString('id-ID') %></span>
                                </div>

                                <div class="col-md-3">
                                    <span class="text-muted small d-block">Status</span>
                                    <span class="badge bg-secondary-subtle text-secondary rounded-pill px-3"><%= order.status %></span>
                                </div>

                                <div class="col-md-3 text-md-end">
                                    <button class="btn btn-outline-dark btn-sm rounded-pill px-3 me-2" onclick="showOrderDetail('<%= order.id %>')">
                                        <i class="bi bi-eye me-1"></i> Detail
                                    </button>

                                    <% if (order.status === 'Pending') { %>
                                        <a href="/pelanggan/pesanan/cancel/<%= order.id %>"
                                           class="btn btn-outline-warning text-warning-emphasis btn-sm rounded-pill px-3"
                                           onclick="return confirm('Batalkan pesanan ini?')">
                                           Batal
                                        </a>
                                    <% } %>

                                    <% if (order.status === 'Cancelled') { %>
                                        <a href="/pelanggan/pesanan/hapus/<%= order.id %>"
                                           class="btn btn-outline-danger btn-sm rounded-pill px-3 ms-1"
                                           onclick="return confirm('Apakah Anda yakin ingin menghapus riwayat pesanan ini secara permanen?')">
                                           <i class="bi bi-trash me-1"></i> Hapus
                                        </a>
                                    <% } %>
                                </div>

                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="text-center py-5 dashboard-card">
                    <i class="bi bi-box-seam fs-1 text-muted opacity-50 mb-3 d-block"></i>
                    <h4 class="fw-normal text-muted">Belum ada riwayat pesanan.</h4>
                    <a href="/katalog" class="btn btn-dark rounded-pill px-4 mt-3">Mulai Belanja</a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<div class="modal fade" id="orderDetailModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow rounded-4">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">
                    Rincian Pesanan <span id="modalOrderId" class="text-primary"></span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <div id="modalContent"></div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    const adminWhatsApp = "6285355443060"; 

    const modal = new bootstrap.Modal(document.getElementById('orderDetailModal'));
    const modalContent = document.getElementById('modalContent');
    const modalOrderId = document.getElementById('modalOrderId');

    function showOrderDetail(orderId) {
        modalOrderId.innerText = `#ORD-${orderId}`;
        modalContent.innerHTML = `
            <div class="text-center py-3">
                <div class="spinner-border"></div>
            </div>
        `;
        modal.show();

        fetch(`/pelanggan/pesanan/detail/${orderId}`)
            .then(res => res.json())
            .then(items => {

                let html = '';
                let subtotal = 0;

                items.forEach(item => {
                    const total = item.price * item.quantity;
                    subtotal += total;

                    html += `
                        <div class="d-flex gap-3 mb-2">
                            <img src="${item.image_url || 'https://placehold.co/60'}" class="item-thumb">
                            <div class="flex-grow-1">
                                <strong>${item.name}</strong><br>
                                <small>${item.quantity} x Rp ${item.price.toLocaleString('id-ID')}</small>
                            </div>
                            <strong>Rp ${total.toLocaleString('id-ID')}</strong>
                        </div>
                    `;
                });

                html += `
                    <hr>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <h5 class="mb-0">Total: Rp ${subtotal.toLocaleString('id-ID')}</h5>
                        <a href="https://wa.me/${adminWhatsApp}?text=Halo%20admin,%20saya%20ingin%20menanyakan%20pesanan%20%23ORD-${orderId}" 
                           target="_blank"
                           class="btn btn-success btn-sm rounded-pill px-3">
                            <i class="bi bi-whatsapp me-1"></i> Chat WhatsApp
                        </a>
                    </div>
                `;

                modalContent.innerHTML = html;
            })
            .catch(() => {
                modalContent.innerHTML = '<p class="text-danger text-center">Gagal memuat data.</p>';
            });
    }
</script>

</body>
</html>