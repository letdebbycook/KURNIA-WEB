    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/style.css">

    <style>
        /* --- GLOBAL STYLE --- */
        body {
            font-family: 'Poppins', sans-serif;
            scroll-behavior: smooth;
        }

        /* --- STYLE KHUSUS KATALOG --- */
        .katalog-hero {
            padding: 100px 0 60px;
            background: linear-gradient(to bottom, #ffffff, #f8f9fa);
            text-align: center;
            border-bottom: 1px solid #f0f0f0;
        }

        /* Card Produk yang Rapi & Minimalis */
        .product-card-clean {
            border: 1px solid #eee;
            border-radius: 12px;
            transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
            background: #fff;
            overflow: hidden;
            height: 100%;
            position: relative;
        }

        .product-card-clean:hover {
            border-color: transparent;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            transform: translateY(-8px);
        }

        .card-img-wrap {
            width: 100%;
            aspect-ratio: 1 / 1;
            background-color: #f8f9fa;
            position: relative;
            overflow: hidden;
        }

        .card-img-actual {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s ease;
        }

        .product-card-clean:hover .card-img-actual {
            transform: scale(1.1);
        }

        /* Overlay Action Buttons (New Interactivity) */
        .card-action-overlay {
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(0, 0, 0, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
            gap: 10px;
        }

        .product-card-clean:hover .card-action-overlay {
            opacity: 1;
        }

        .btn-action-icon {
            width: 45px; height: 45px;
            background: white;
            border-radius: 50%;
            display: flex; align-items: center; justify-content: center;
            color: #333;
            text-decoration: none;
            transform: translateY(20px);
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
            cursor: pointer;
            border: none;
        }
        
        .btn-action-icon:hover {
            background: #1a1a1a;
            color: #fff;
        }

        .product-card-clean:hover .btn-action-icon {
            transform: translateY(0);
        }
        
        /* Stagger animation for buttons */
        .product-card-clean:hover .btn-action-icon:nth-child(1) { transition-delay: 0.05s; }
        .product-card-clean:hover .btn-action-icon:nth-child(2) { transition-delay: 0.1s; }

        /* Badge Stok/Kategori */
        .product-badge {
            position: absolute;
            top: 12px;
            left: 12px;
            background-color: rgba(255, 255, 255, 0.95);
            color: #333;
            padding: 5px 12px;
            font-size: 0.7rem;
            font-weight: 600;
            border-radius: 4px;
            z-index: 2;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        /* Wishlist Button */
        .btn-wishlist {
            position: absolute; top: 10px; right: 10px;
            background: rgba(255, 255, 255, 0.9); border-radius: 50%;
            width: 35px; height: 35px; display: flex; align-items: center; justify-content: center;
            color: #ccc; border: none; box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            z-index: 5; transition: 0.3s; cursor: pointer;
        }
        .btn-wishlist:hover { transform: scale(1.1); background: #fff; }
        .btn-wishlist.active { color: #dc3545; }

        /* Pagination Style */
        .page-link {
            color: #333; border: none; margin: 0 3px;
            border-radius: 50% !important;
            width: 40px; height: 40px;
            display: flex; align-items: center; justify-content: center;
            font-weight: 500; transition: all 0.2s;
        }
        .page-link:hover { background-color: #eee; color: #000; transform: scale(1.1); }
        .page-item.active .page-link {
            background-color: #1a1a1a; color: #fff;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
        
        /* Floating Filter Button (Mobile) */
        .filter-scroll-container {
            overflow-x: auto;
            white-space: nowrap;
            -webkit-overflow-scrolling: touch;
            padding-bottom: 5px;
        }
        
        .filter-scroll-container::-webkit-scrollbar { display: none; }
    </style>
</head>

