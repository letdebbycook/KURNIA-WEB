    <section class="katalog-hero">
        <div class="container" data-aos="fade-down" data-aos-duration="1000">
            <h1 class="fw-bold display-5 mb-3">Katalog Koleksi Lengkap</h1>
            <p class="text-muted mb-4 mx-auto" style="max-width: 600px;">
                Jelajahi ragam pilihan kain berkualitas premium kami. Temukan tekstur dan warna yang sempurna untuk karya Anda.
            </p>
            
            <div class="filter-scroll-container d-flex justify-content-center gap-2 px-3">
                <% 
                    const categories = ['Semua', 'Katun', 'Rayon', 'Silk', 'Linen', 'Spandex', 'Lainnya'];
                    categories.forEach(cat => {
                        let isActive = currentCategory === cat;
                        let url = cat === 'Semua' ? '/katalog' : `/katalog?kategori=${cat}`;
                %>
                    <a href="<%= url %>" 
                       class="btn <%= isActive ? 'btn-dark shadow' : 'btn-white border' %> rounded-pill px-4 btn-sm filter-btn"
                       style="transition: 0.3s;">
                        <%= cat %>
                    </a>
                <% }); %>
            </div>
        </div>
    </section>

    <section class="py-5 bg-light bg-opacity-25">
        <div class="container">
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <span class="text-muted small">Menampilkan <strong><%= currentPage %></strong> dari <strong><%= totalPages %></strong> halaman</span>
                <div class="dropdown">
                    <ul class="dropdown-menu dropdown-menu-end border-0 shadow mt-2">
                        <li><a class="dropdown-item" href="#">Terbaru</a></li>
                        <li><a class="dropdown-item" href="#">Harga Terendah</a></li>
                        <li><a class="dropdown-item" href="#">Harga Tertinggi</a></li>
                    </ul>
                </div>
            </div>

            <div class="row g-4">
                <% if (typeof products !== 'undefined' && products.length > 0) { %>
                    <% products.forEach((product, index) => { %>
                        <div class="col-6 col-md-4 col-lg-3" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                            <div class="product-card-clean h-100">
                                
                                <div class="card-img-wrap">
                                    <span class="product-badge"><%= product.category || 'Umum' %></span>

                                    <button class="btn-wishlist <%= (typeof wishlistIds !== 'undefined' && wishlistIds.includes(product.id)) ? 'active' : '' %>" 
                                            onclick="toggleWishlist(event, '<%= product.id %>')"
                                            title="Simpan ke Wishlist">
                                        <i class="bi <%= (typeof wishlistIds !== 'undefined' && wishlistIds.includes(product.id)) ? 'bi-heart-fill' : 'bi-heart' %>"></i>
                                    </button>

                                    <% if (product.image_url) { %>
                                        <img src="<%= product.image_url %>" alt="<%= product.name %>" class="card-img-actual">
                                    <% } else { %>
                                        <div class="d-flex align-items-center justify-content-center h-100 text-muted bg-light">
                                            <i class="bi bi-image fs-1 opacity-25"></i>
                                        </div>
                                    <% } %>

                                    <div class="card-action-overlay">
                                        <button class="btn-action-icon" 
                                                onclick="openQuickView('<%= JSON.stringify(product).replace(/'/g, '&#39;') %>')" 
                                                title="Lihat Cepat">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <a href="/produk/<%= product.id %>" class="btn-action-icon" title="Lihat Detail">
                                            <i class="bi bi-arrow-right"></i>
                                        </a>
                                    </div>
                                </div>

                                <div class="p-3 d-flex flex-column h-100">
                                    <h6 class="fw-bold text-truncate mb-1 text-dark"><%= product.name %></h6>
                                    <div class="d-flex justify-content-between align-items-center mt-2 mb-2">
                                        <span class="text-primary fw-bold">Rp <%= Number(product.price).toLocaleString('id-ID') %></span>
                                        <small class="<%= product.stock > 0 ? 'text-success' : 'text-danger' %>" style="font-size: 0.75rem;">
                                            <i class="bi bi-circle-fill" style="font-size: 6px; vertical-align: middle;"></i> 
                                            <%= product.stock > 0 ? 'Tersedia' : 'Habis' %>
                                        </small>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12 text-center py-5" data-aos="fade-in">
                        <div class="py-5">
                            <i class="bi bi-emoji-frown fs-1 text-muted opacity-25 mb-3 d-block"></i>
                            <h5 class="text-muted fw-normal">Produk tidak ditemukan.</h5>
                            <p class="small text-muted">Coba kategori lain atau reset filter.</p>
                            <a href="/katalog" class="btn btn-dark btn-sm rounded-pill px-4 mt-2">Reset Filter</a>
                        </div>
                    </div>
                <% } %>
            </div>

            <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
            <div class="row mt-5" data-aos="fade-up">
                <div class="col-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center align-items-center">
                            <li class="page-item <%= currentPage == 1 ? 'disabled' : '' %>">
                                <a class="page-link shadow-sm" href="/katalog?page=<%= currentPage - 1 %>"><i class="bi bi-chevron-left small"></i></a>
                            </li>
                            <% for(let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                                    <a class="page-link shadow-sm" href="/katalog?page=<%= i %>"><%= i %></a>
                                </li>
                            <% } %>
                            <li class="page-item <%= currentPage == totalPages ? 'disabled' : '' %>">
                                <a class="page-link shadow-sm" href="/katalog?page=<%= currentPage + 1 %>"><i class="bi bi-chevron-right small"></i></a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <% } %>

        </div>
    </section>

