<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout & Pembayaran - KURNIA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body { background-color: #f8f9fa; padding-top: 80px; }
        
        .payment-option {
            border: 2px solid #eee;
            border-radius: 12px;
            padding: 15px;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            gap: 15px;
            background-color: #fff;
        }
        .payment-option:hover { border-color: #ccc; }
        
        .btn-check:checked + .payment-option {
            border-color: var(--accent-color, #c9a227);
            background-color: #fffbf0;
            box-shadow: 0 4px 10px rgba(201, 162, 39, 0.15);
        }
        
        .checkout-card {
            background: #fff;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.03);
            margin-bottom: 20px;
        }

        .item-thumb { 
            width: 60px; height: 60px; object-fit: cover; 
            border-radius: 8px; border: 1px solid #eee;
        }
        
        .payment-instruction {
            background-color: #f8f9fa; border: 1px dashed #ccc;
            border-radius: 12px; padding: 20px; text-align: center;
            margin-top: 15px; display: none;
        }
        
        .fade-in { animation: fadeIn 0.5s; }
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }

        .sticky-summary { position: sticky; top: 100px; }

        /* Map Container */
        #map-container {
            height: 350px;
            width: 100%;
            border-radius: 12px;
            margin-top: 15px;
            border: 1px solid #ddd;
            display: none; /* Hidden by default */
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-light bg-white fixed-top shadow-sm py-3">
        <div class="container">
            <a class="navbar-brand fw-bold text-decoration-none text-dark" href="/keranjang">
                <i class="bi bi-arrow-left me-2"></i> Kembali ke Keranjang
            </a>
            <span class="fw-bold text-muted d-none d-md-block">Checkout Pengiriman & Pembayaran <i class="bi bi-shield-lock-fill ms-1 text-success"></i></span>
        </div>
    </nav>

    <div class="container my-4">
        <form action="/checkout" method="POST" enctype="multipart/form-data" id="checkoutForm">
            <div class="row g-5">
                
                <div class="col-lg-8">
                    
                    <div class="checkout-card">
                        <h5 class="fw-bold mb-3 text-dark">
                            <i class="bi bi-geo-alt-fill me-2 text-danger"></i> Alamat Pengiriman
                        </h5>
                        <div class="form-group">
                            <label class="form-label small text-muted">Alamat Lengkap</label>
                            <textarea name="shipping_address" id="shipping_address" class="form-control bg-light border-0" rows="3" placeholder="Cari di peta atau ketik manual (Nama Jalan, No. Rumah, Kecamatan...)" required></textarea>
                            
                            <div class="d-flex gap-2 mt-2">
                                <button type="button" class="btn btn-outline-primary btn-sm rounded-pill px-3" onclick="getLocation()">
                                    <i class="bi bi-crosshair me-1"></i> Lokasi Saya Saat Ini
                                </button>
                                <button type="button" class="btn btn-outline-dark btn-sm rounded-pill px-3" onclick="toggleMap()">
                                    <i class="bi bi-map-fill me-1"></i> Buka/Tutup Peta
                                </button>
                            </div>

                            <div id="map-container"></div>
                            <small class="text-muted fst-italic mt-1 d-block" id="map-hint" style="display:none;">*Geser pin merah untuk menyesuaikan lokasi alamat.</small>
                        </div>
                    </div>

                    <div class="checkout-card">
                        <h5 class="fw-bold mb-4 text-dark">
                            <i class="bi bi-wallet2 me-2 text-primary"></i> Metode Pembayaran
                        </h5>
                        
                        <div class="d-flex flex-column gap-3">
                            <div>
                                <input type="radio" class="btn-check" name="payment_method" id="bank" value="Bank Transfer" checked onchange="showPaymentInfo('bank')">
                                <label class="payment-option" for="bank">
                                    <div class="bg-primary bg-opacity-10 rounded p-2 text-primary"><i class="bi bi-bank fs-3"></i></div>
                                    <div class="flex-grow-1">
                                        <div class="fw-bold">Transfer Bank Manual</div>
                                        <small class="text-muted">BCA, Mandiri, BNI, BRI</small>
                                    </div>
                                    <i class="bi bi-circle text-secondary uncheck-icon d-none"></i>
                                    <i class="bi bi-check-circle-fill fs-4 text-success check-icon"></i>
                                </label>
                                
                                <div id="info-bank" class="payment-instruction fade-in" style="display: block;">
                                    <h6 class="fw-bold text-muted mb-2">Transfer ke:</h6>
                                    <div class="bg-white border rounded p-3 d-inline-block mb-3 shadow-sm">
                                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/68/BANK_BRI_logo.svg/330px-BANK_BRI_logo.svg.png?20180118061811" alt="BCA" style="height: 30px;" class="mb-2 d-block mx-auto">
                                        <h4 class="fw-bold text-primary mb-0">7662 0101 7664 535</h4>
                                        <small class="text-muted">a.n. DEBBY GUSDI AHKBAR</small>
                                    </div>
                                    <div class="alert alert-warning small py-2 mb-0">Wajib upload bukti transfer.</div>
                                </div>
                            </div>
                            
                            <div id="upload-area" class="mt-4 pt-3 border-top">
                                <label class="form-label fw-bold text-dark">Upload Bukti Pembayaran <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <input type="file" class="form-control" name="payment_proof" id="paymentProof" accept="image/*" required>
                                    <label class="input-group-text" for="paymentProof"><i class="bi bi-upload"></i></label>
                                </div>
                                <div class="form-text text-muted small mt-1">Format: JPG, PNG, JPEG. Max 5MB.</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="checkout-card sticky-summary">
                        <h5 class="fw-bold mb-4">Ringkasan Pesanan</h5>
                        <div class="d-flex flex-column gap-3 mb-4 pe-2" style="max-height: 300px; overflow-y: auto;">
                            <% cartItems.forEach(item => { %>
                                <div class="d-flex align-items-start gap-3">
                                    <img src="<%= item.image_url %>" class="item-thumb bg-light">
                                    <div class="small w-100">
                                        <div class="fw-bold text-truncate mb-1" style="max-width: 180px;"><%= item.name %></div>
                                        <div class="d-flex justify-content-between text-muted">
                                            <span><%= item.quantity %> x</span>
                                            <span>Rp <%= Number(item.price).toLocaleString('id-ID') %></span>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                        <hr class="border-secondary opacity-10">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Subtotal Produk</span>
                            <span class="fw-medium">Rp <%= Number(subtotal).toLocaleString('id-ID') %></span>
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="text-muted">Ongkos Kirim</span>
                            <span class="text-success fw-bold">Konfirmasi WhatsApp</span>
                        </div>
                        <div class="d-flex justify-content-between mb-4 pt-2 border-top">
                            <span class="fs-5 fw-bold mt-2">Total Tagihan</span>
                            <span class="fs-4 fw-bold text-primary mt-2">Rp <%= Number(total).toLocaleString('id-ID') %></span>
                        </div>
                        <button type="submit" form="checkoutForm" class="btn btn-dark w-100 rounded-pill py-3 fw-bold shadow-sm btn-buy">
                            Konfirmasi Pembayaran <i class="bi bi-check-circle-fill ms-2"></i>
                        </button>
                    </div>
                </div>

            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB5_yed4GlJj2aczfdXIiBzZtFRRNCQDws&libraries=places"></script>

    <script>
        // --- PAYMENT LOGIC (Disederhanakan) ---
        // Karena hanya ada satu metode, kita pastikan upload area selalu muncul
        document.addEventListener("DOMContentLoaded", () => {
            const uploadArea = document.getElementById('upload-area');
            if(uploadArea) {
                uploadArea.style.display = 'block';
                uploadArea.classList.add('fade-in');
            }
        });

        // Function ini dipertahankan jika Anda ingin menambahkan metode lain di masa depan
        function showPaymentInfo(method) {
            // Karena hanya bank, logika ini sebenarnya redundant tapi aman dibiarkan
            const infoBank = document.getElementById('info-bank');
            if(infoBank) infoBank.style.display = 'block';
        }

        // --- MAP LOGIC ---
        let map;
        let marker;
        let geocoder;

        function initMap(lat = -6.2088, lng = 106.8456) { // Default Jakarta
            const location = { lat: lat, lng: lng };
            
            map = new google.maps.Map(document.getElementById("map-container"), {
                zoom: 15,
                center: location,
                mapTypeControl: false,
            });

            marker = new google.maps.Marker({
                position: location,
                map: map,
                draggable: true,
                animation: google.maps.Animation.DROP
            });

            geocoder = new google.maps.Geocoder();

            marker.addListener("dragend", () => {
                const position = marker.getPosition();
                geocodePosition(position);
                map.panTo(position);
            });

            map.addListener("click", (e) => {
                marker.setPosition(e.latLng);
                geocodePosition(e.latLng);
                map.panTo(e.latLng);
            });
        }

        function geocodePosition(pos) {
            geocoder.geocode({ location: pos }, (results, status) => {
                if (status === "OK") {
                    if (results[0]) {
                        document.getElementById("shipping_address").value = results[0].formatted_address;
                    } else {
                        alert("Alamat tidak ditemukan.");
                    }
                } else {
                    alert("Geocoder gagal karena: " + status);
                }
            });
        }

        function toggleMap() {
            const mapContainer = document.getElementById("map-container");
            const mapHint = document.getElementById("map-hint");
            
            if (mapContainer.style.display === "none" || mapContainer.style.display === "") {
                mapContainer.style.display = "block";
                mapHint.style.display = "block";
                if (!map) {
                    initMap(); 
                } else {
                    google.maps.event.trigger(map, 'resize');
                }
            } else {
                mapContainer.style.display = "none";
                mapHint.style.display = "none";
            }
        }

        function getLocation() {
            if (navigator.geolocation) {
                document.getElementById("shipping_address").value = "Mencari lokasi Anda...";
                
                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        const userLat = position.coords.latitude;
                        const userLng = position.coords.longitude;
                        
                        const mapContainer = document.getElementById("map-container");
                        if(mapContainer.style.display === "none") {
                            toggleMap();
                        }

                        const pos = { lat: userLat, lng: userLng };
                        if(map) {
                            map.setCenter(pos);
                            marker.setPosition(pos);
                            geocodePosition(pos);
                        } else {
                            initMap(userLat, userLng);
                            geocodePosition(pos);
                        }
                    },
                    (error) => {
                        alert("Gagal mendeteksi lokasi. Pastikan GPS aktif.");
                        document.getElementById("shipping_address").value = "";
                    }
                );
            } else {
                alert("Browser tidak mendukung Geolocation.");
            }
        }
    </script>
</body>
</html>