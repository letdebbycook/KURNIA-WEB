<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout & Pembayaran - KURNIA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body { background-color: #f8f9fa; padding-top: 80px; }
        
        /* Style Pilihan Pembayaran */
        .payment-option {
            border: 2px solid #eee;
            border-radius: 12px;
            padding: 15px;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            gap: 15px;
            background-color: #fff;
        }
        .payment-option:hover { border-color: #ccc; }
        
        /* Radio button tersembunyi, style label saat dicek */
        .btn-check:checked + .payment-option {
            border-color: var(--accent-color, #c9a227);
            background-color: #fffbf0;
            box-shadow: 0 4px 10px rgba(201, 162, 39, 0.15);
        }
        
        .checkout-card {
            background: #fff;
            border-radius: 16px;
            padding: 25px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.03);
            margin-bottom: 20px;
        }

        .item-thumb { 
            width: 60px; 
            height: 60px; 
            object-fit: cover; 
            border-radius: 8px; 
            border: 1px solid #eee;
        }
        
        /* Kotak Instruksi Pembayaran */
        .payment-instruction {
            background-color: #f8f9fa;
            border: 1px dashed #ccc;
            border-radius: 12px;
            padding: 20px;
            text-align: center;
            margin-top: 15px;
            display: none; /* Sembunyikan default */
        }
        
        /* Animasi muncul */
        .fade-in { animation: fadeIn 0.5s; }
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }

        /* Sticky Summary pada Desktop */
        .sticky-summary {
            position: sticky;
            top: 100px;
        }
    </style>
</head>

<body>

    <!-- NAVBAR SEDERHANA -->
    <nav class="navbar navbar-light bg-white fixed-top shadow-sm py-3">
        <div class="container">
            <a class="navbar-brand fw-bold text-decoration-none text-dark" href="/keranjang">
                <i class="bi bi-arrow-left me-2"></i> Kembali ke Keranjang
            </a>
            <span class="fw-bold text-muted d-none d-md-block">Checkout Pengiriman & Pembayaran <i class="bi bi-shield-lock-fill ms-1 text-success"></i></span>
        </div>
    </nav>

    <div class="container my-4">
        <!-- FORM UTAMA (PENTING: enctype="multipart/form-data" untuk upload file) -->
        <form action="/checkout" method="POST" enctype="multipart/form-data" id="checkoutForm">
            <div class="row g-5">
                
                <!-- KOLOM KIRI: DATA PENGIRIMAN & PEMBAYARAN -->
                <div class="col-lg-8">
                    
                    <!-- 1. ALAMAT PENGIRIMAN -->
                    <div class="checkout-card">
                        <h5 class="fw-bold mb-3 text-dark">
                            <i class="bi bi-geo-alt-fill me-2 text-danger"></i> Alamat Pengiriman
                        </h5>
                        <div class="form-group">
                            <label class="form-label small text-muted">Alamat Lengkap</label>
                            <textarea name="shipping_address" class="form-control bg-light border-0" rows="3" placeholder="Nama Jalan, No. Rumah, Kecamatan, Kota, Kode Pos..." required></textarea>
                        </div>
                    </div>

                    <!-- 2. METODE PEMBAYARAN -->
                    <div class="checkout-card">
                        <h5 class="fw-bold mb-4 text-dark">
                            <i class="bi bi-wallet2 me-2 text-primary"></i> Metode Pembayaran
                        </h5>
                        
                        <div class="d-flex flex-column gap-3">
                            <!-- Opsi Bank Transfer -->
                            <div>
                                <input type="radio" class="btn-check" name="payment_method" id="bank" value="Bank Transfer" onchange="showPaymentInfo('bank')">
                                <label class="payment-option" for="bank">
                                    <div class="bg-primary bg-opacity-10 rounded p-2 text-primary">
                                        <i class="bi bi-bank fs-3"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="fw-bold">Transfer Bank Manual</div>
                                        <small class="text-muted">BCA, Mandiri, BNI, BRI</small>
                                    </div>
                                    <i class="bi bi-circle text-secondary uncheck-icon"></i>
                                    <i class="bi bi-check-circle-fill fs-4 text-success check-icon d-none"></i>
                                </label>
                                
                                <!-- INFO BANK (Muncul jika dipilih) -->
                                <div id="info-bank" class="payment-instruction fade-in">
                                    <h6 class="fw-bold text-muted mb-2">Silakan transfer ke rekening berikut:</h6>
                                    <div class="bg-white border rounded p-3 d-inline-block mb-3 shadow-sm">
                                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/68/BANK_BRI_logo.svg/330px-BANK_BRI_logo.svg.png?20180118061811" alt="BCA" style="height: 30px;" class="mb-2 d-block mx-auto">
                                        <h4 class="fw-bold text-primary mb-0 tracking-wide">7662 0101 7664 535</h4>
                                        <small class="text-muted">a.n. DEBBY GUSDI AHKBAR</small>
                                    </div>
                                    <div class="alert alert-warning small py-2 mb-0">
                                        <i class="bi bi-info-circle-fill me-1"></i> Penting: Mohon upload bukti transfer di bawah agar pesanan dapat segera diproses.
                                    </div>
                                </div>
                            </div>
                        <!-- 3. UPLOAD BUKTI PEMBAYARAN -->
                        <div id="upload-area" class="mt-4 pt-3 border-top" style="display: none;">
                            <label class="form-label fw-bold text-dark">Upload Bukti Pembayaran <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <input type="file" class="form-control" name="payment_proof" id="paymentProof" accept="image/*" required>
                                <label class="input-group-text" for="paymentProof"><i class="bi bi-upload"></i></label>
                            </div>
                            <div class="form-text text-muted small mt-1">
                                Format: JPG, PNG, JPEG. Maksimal ukuran file 5MB.
                            </div>
                        </div>

                    </div>
                </div>

                <!-- KOLOM KANAN: RINGKASAN PESANAN -->
                <div class="col-lg-4">
                    <div class="checkout-card sticky-summary">
                        <h5 class="fw-bold mb-4">Ringkasan Pesanan</h5>
                        
                        <!-- List Item Kecil -->
                        <div class="d-flex flex-column gap-3 mb-4 pe-2" style="max-height: 300px; overflow-y: auto;">
                            <% cartItems.forEach(item => { %>
                                <div class="d-flex align-items-start gap-3">
                                    <img src="<%= item.image_url %>" class="item-thumb bg-light">
                                    <div class="small w-100">
                                        <div class="fw-bold text-truncate mb-1" style="max-width: 180px;"><%= item.name %></div>
                                        <div class="d-flex justify-content-between text-muted">
                                            <span><%= item.quantity %> x</span>
                                            <span>Rp <%= Number(item.price).toLocaleString('id-ID') %></span>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>

                        <hr class="border-secondary opacity-10">

                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Subtotal Produk</span>
                            <span class="fw-medium">Rp <%= Number(subtotal).toLocaleString('id-ID') %></span>
                        </div>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="text-muted">Ongkos Kirim</span>
                            <span class="text-success fw-bold">Konfirmasi WhatsApp</span>
                        </div>
                        
                        <div class="d-flex justify-content-between mb-4 pt-2 border-top">
                            <span class="fs-5 fw-bold mt-2">Total Tagihan</span>
                            <span class="fs-4 fw-bold text-primary mt-2">Rp <%= Number(total).toLocaleString('id-ID') %></span>
                        </div>

                        <button type="submit" form="checkoutForm" class="btn btn-dark w-100 rounded-pill py-3 fw-bold shadow-sm btn-buy">
                            Konfirmasi Pembayaran <i class="bi bi-check-circle-fill ms-2"></i>
                        </button>
                        
                        <div class="text-center mt-3">
                            <p class="small text-muted mb-0"><i class="bi bi-shield-check me-1"></i> Transaksi Aman & Terenkripsi</p>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SCRIPT LOGIKA TAMPILAN -->
    <script>
        function showPaymentInfo(method) {
            // 1. Sembunyikan semua info instruksi
            document.getElementById('info-bank').style.display = 'none';
            document.getElementById('info-qris').style.display = 'none';
            
            // 2. Tampilkan area upload bukti (Wajib untuk kedua metode)
            document.getElementById('upload-area').style.display = 'block';
            // Animasi fade-in kecil
            document.getElementById('upload-area').classList.add('fade-in');

            // 3. Tampilkan instruksi yang sesuai
            if (method === 'bank') {
                document.getElementById('info-bank').style.display = 'block';
            } else if (method === 'qris') {
                document.getElementById('info-qris').style.display = 'block';
            }

            // 4. Update UI Radio Button (Visual Check Icon)
            // Reset semua icon
            document.querySelectorAll('.check-icon').forEach(el => el.classList.add('d-none'));
            document.querySelectorAll('.uncheck-icon').forEach(el => el.classList.remove('d-none'));

            // Aktifkan icon pada pilihan yang diklik
            const selectedLabel = document.querySelector(`input[name="payment_method"][value="${method === 'bank' ? 'Bank Transfer' : 'QRIS'}"]`).nextElementSibling;
            selectedLabel.querySelector('.check-icon').classList.remove('d-none');
            selectedLabel.querySelector('.uncheck-icon').classList.add('d-none');
        }
        
        // Jalankan sekali saat halaman dimuat (untuk handle refresh atau back button)
        document.addEventListener("DOMContentLoaded", () => {
            const bankRadio = document.getElementById('bank');
            const qrisRadio = document.getElementById('qris');

            if(bankRadio.checked) showPaymentInfo('bank');
            else if(qrisRadio.checked) showPaymentInfo('qris');
        });
    </script>
</body>
</html>