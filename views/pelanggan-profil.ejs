<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profil - KURNIA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Style dari Dashboard Pelanggan -->
    <style>
        body { background-color: #f4f6f9; animation: fadeIn 0.6s ease-in-out; }
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
        .sidebar { min-height: calc(100vh - 76px); background-color: #fff; border-right: 1px solid #eee; }
        .sidebar-link {
            display: flex; align-items: center; padding: 12px 20px;
            color: var(--primary-color, #2c3e50); text-decoration: none;
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            border-radius: 12px; margin-bottom: 8px; font-weight: 500;
        }
        .sidebar-link:hover {
            background-color: var(--bg-light, #f8f9fa); color: var(--accent-color, #c9a227);
            transform: translateX(5px); box-shadow: 2px 2px 8px rgba(0,0,0,0.05);
        }
        .sidebar-link.active {
            background-color: var(--accent-color, #c9a227); color: #fff;
            box-shadow: 0 4px 12px rgba(201, 162, 39, 0.3);
        }
        .sidebar-link i { font-size: 1.3rem; margin-right: 14px; width: 24px; text-align: center; }
        .dashboard-card {
            background: #fff; border-radius: 16px; padding: 30px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.04); border: 1px solid #f0f0f0;
        }

        /* Hilangkan border-radius kanan pada input di dalam grup */
        .input-group .form-control.rounded-pill {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }
        /* Tambahkan border-radius kiri pada tombol di dalam grup */
        .input-group .btn.rounded-pill {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
        }
        /* Style untuk tombol show/hide password */
        .btn-toggle-password {
            background-color: #f8f9fa;
            border: none;
            color: #6c757d;
        }
        .btn-toggle-password:hover {
            background-color: #e9ecef;
            color: #000;
        }
    </style>
</head>

<body class="bg-light">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white py-3 fixed-top shadow-sm">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold fs-4" href="/" style="letter-spacing: 1px;">KURNIA<span style="color: var(--accent-color, #c9a227);">.</span></a>
            <button class="navbar-toggler border-0 p-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu">
                <i class="bi bi-list fs-4"></i>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <!-- Ikon Keranjang -->
                    <a href="/keranjang" class="nav-link position-relative me-3">
                        <i class="bi bi-cart-fill fs-5"></i>
                        <% if (cartCount > 0) { %>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 10px;"><%= cartCount %></span>
                        <% } %>
                    </a>
                    <!-- Profil Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center gap-3 p-1 ps-3 pe-3 rounded-pill hover-bg-light" href="#" role="button" data-bs-toggle="dropdown">
                            <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center text-white fw-bold shadow-sm" style="width: 38px; height: 38px; font-size: 14px; background: linear-gradient(45deg, #6b7b8c, #2c3e50);">
                                <%= user ? user.username.substring(0,2).toUpperCase() : 'US' %>
                            </div>
                            <div class="d-none d-lg-block text-start">
                                <div class="fw-semibold small text-dark"><%= user ? user.username : 'Pelanggan' %></div>
                                <div class="text-muted" style="font-size: 11px;">Member</div>
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 mt-3 rounded-4 overflow-hidden p-2">
                            <li><a class="dropdown-item rounded-3 p-2 mb-1" href="/pelanggan/dashboard"><i class="bi bi-grid-fill me-3 text-muted"></i> Dashboard</a></li>
                            <li><a class="dropdown-item rounded-3 p-2 text-danger fw-medium" href="/logout"><i class="bi bi-box-arrow-right me-3"></i> Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN LAYOUT -->
    <div class="container-fluid px-0" style="margin-top: 76px;">
        <div class="row g-0">

            <!-- SIDEBAR (Menu Kiri) -->
            <div class="col-lg-2 d-none d-lg-block sidebar p-4 shadow-sm z-1">
                <h6 class="text-muted text-uppercase small fw-bold mb-4 ls-2 ps-3 pt-3" style="letter-spacing: 1.5px; font-size: 0.75rem;">Menu Utama</h6>
                <nav class="nav flex-column gap-2">
                    <a href="/pelanggan/dashboard" class="sidebar-link">
                        <i class="bi bi-grid-fill"></i> Dashboard
                    </a>
                    <a href="/pelanggan/pesanan" class="sidebar-link">
                        <i class="bi bi-bag-check-fill"></i> Pesanan Saya
                    </a>
                    <a href="/wishlist" class="sidebar-link">
                        <i class="bi bi-heart-fill"></i> Wishlist
                    </a>
                     <h6 class="text-muted text-uppercase small fw-bold mt-5 mb-4 ls-2 ps-3" style="letter-spacing: 1.5px; font-size: 0.75rem;">Akun</h6>
                    <a href="/pelanggan/profil" class="sidebar-link active"> <!-- Active di sini -->
                        <i class="bi bi-person-lines-fill"></i> Edit Profil
                    </a>
                    <a href="/logout" class="sidebar-link text-danger mt-5 bg-danger-subtle">
                        <i class="bi bi-box-arrow-left"></i> Keluar
                    </a>
                </nav>
            </div>
            
            <!-- OFFCANVAS SIDEBAR (Mobile) -->
             <div class="offcanvas offcanvas-start rounded-end-4" tabindex="-1" id="sidebarMenu" aria-labelledby="sidebarMenuLabel">
                <div class="offcanvas-header border-bottom">
                    <h5 class="offcanvas-title fw-bold" id="sidebarMenuLabel">Menu Pelanggan</h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body p-4">
                     <nav class="nav flex-column gap-2">
                        <a href="/pelanggan/dashboard" class="sidebar-link"><i class="bi bi-grid-fill"></i> Dashboard</a>
                        <a href="/pelanggan/pesanan" class="sidebar-link"><i class="bi bi-bag-check-fill"></i> Pesanan Saya</a>
                        <a href="/wishlist" class="sidebar-link"><i class="bi bi-heart-fill"></i> Wishlist</a>
                        <hr class="my-4">
                        <a href="/pelanggan/profil" class="sidebar-link active"><i class="bi bi-person-lines-fill"></i> Edit Profil</a>
                        <a href="/logout" class="sidebar-link text-danger bg-danger-subtle"><i class="bi bi-box-arrow-left"></i> Keluar</a>
                    </nav>
                </div>
            </div>

            <!-- MAIN CONTENT (Kanan) -->
            <div class="col-lg-10 p-4 p-lg-5 bg-light">
                
                <h2 class="fw-bold mb-4">Profil Saya</h2>

                <!-- Notifikasi Sukses/Error -->
                <% if (typeof success_msg !== 'undefined' && success_msg) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i> <%= success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                <% if (typeof error_msg !== 'undefined' && error_msg) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> <%= error_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <div class="row g-4">
                    <!-- Form 1: Informasi Akun -->
                    <div class="col-lg-7">
                        <div class="dashboard-card">
                            <h5 class="fw-bold mb-4">Informasi Akun</h5>
                            <form action="/pelanggan/profil/data" method="POST">
                                <div class="mb-3">
                                    <label for="full_name" class="form-label fw-medium">Nama Lengkap</label>
                                    <input type="text" class="form-control bg-light border-0 py-2 rounded-pill px-3" id="full_name" name="full_name" value="<%= userData.full_name %>">
                                </div>
                                <div class="mb-3">
                                    <label for="username" class="form-label fw-medium">Username</label>
                                    <input type="text" class="form-control bg-light border-0 py-2 rounded-pill px-3" id="username" name="username" value="<%= userData.username %>" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label fw-medium">Email</label>
                                    <input type="email" class="form-control bg-light border-0 py-2 rounded-pill px-3" id="email" name="email" value="<%= userData.email %>" required>
                                </div>
                                <div class="mb-3">
                                    <label for="phone_number" class="form-label fw-medium">Nomor Telepon</label>
                                    <input type="tel" class="form-control bg-light border-0 py-2 rounded-pill px-3" id="phone_number" name="phone_number" value="<%= userData.phone_number || '' %>" placeholder="Contoh: 08123456789">
                                </div>
                                <button type="submit" class="btn btn-dark rounded-pill px-5 py-2 mt-3">Simpan Perubahan</button>
                            </form>
                        </div>
                    </div>

                    <!-- Form 2: Ubah Password -->
                    <div class="col-lg-5">
                        <div class="dashboard-card">
                            <h5 class="fw-bold mb-4">Ubah Password</h5>
                            <form action="/pelanggan/profil/password" method="POST">
                                <!-- PERUBAHAN: Input Password Lama -->
                                <div class="mb-3">
                                    <label for="old_password" class="form-label fw-medium">Password Lama</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control bg-light border-0 py-2 rounded-start-pill px-3" id="old_password" name="old_password" required>
                                        <button class="btn btn-toggle-password rounded-end-pill" type="button" onclick="togglePassword('old_password', this)">
                                            <i class="bi bi-eye-slash"></i>
                                        </button>
                                    </div>
                                </div>
                                <!-- PERUBAHAN: Input Password Baru -->
                                <div class="mb-3">
                                    <label for="new_password" class="form-label fw-medium">Password Baru</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control bg-light border-0 py-2 rounded-start-pill px-3" id="new_password" name="new_password" required minlength="8">
                                        <button class="btn btn-toggle-password rounded-end-pill" type="button" onclick="togglePassword('new_password', this)">
                                            <i class="bi bi-eye-slash"></i>
                                        </button>
                                    </div>
                                </div>
                                <!-- PERUBAHAN: Input Konfirmasi Password -->
                                <div class="mb-3">
                                    <label for="confirm_password" class="form-label fw-medium">Konfirmasi Password Baru</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control bg-light border-0 py-2 rounded-start-pill px-3" id="confirm_password" name="confirm_password" required>
                                        <button class="btn btn-toggle-password rounded-end-pill" type="button" onclick="togglePassword('confirm_password', this)">
                                            <i class="bi bi-eye-slash"></i>
                                        </button>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-warning text-white rounded-pill px-5 py-2 mt-3">Ubah Password</button>
                            </form>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Script untuk mengaktifkan tooltips (jika ada)
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
    
        // Script untuk menutup alert secara otomatis setelah beberapa detik (Opsional)
        setTimeout(() => {
            const alert = document.querySelector('.alert-dismissible');
            if(alert) {
                new bootstrap.Alert(alert).close();
            }
        }, 5000); // Tutup setelah 5 detik

        // --- BARU: Logika Show/Hide Password ---
        function togglePassword(inputId, btn) {
            const input = document.getElementById(inputId);
            const icon = btn.querySelector('i');
            
            // Cek tipe input saat ini
            if (input.type === 'password') {
                // Ubah ke teks
                input.type = 'text';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            } else {
                // Ubah ke password
                input.type = 'password';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            }
        }
    </script>
</body>
</html>